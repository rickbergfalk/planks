{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["../src/*"]
    }
  },
  "include": ["src/**/*", "vite.config.ts"],
  "references": [{ "path": ".." }]
}
